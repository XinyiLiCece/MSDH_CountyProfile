profileSearchUI <- function(id, inputText) {
  ns <- NS(id)
  tags$div(class = "tabPanel-profileSearch",
           selectInput(ns('in6'),
                       'Options',
                       c("a", "b", "c"),
                       multiple=TRUE, selectize=TRUE),
           actionButton(ns("searchBtn"), "Go"),
           htmlOutput(ns("renderP"))
  )
}


